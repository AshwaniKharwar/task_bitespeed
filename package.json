{
  "name": "bitespeed-identity-reconciliation",
  "version": "1.0.0",
  "description": "Web service to identify and link customer contacts across multiple purchases",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "test:scenarios": "node test_scenarios.js",
    "test:contacts": "node test_contacts_endpoint.js",
    "examples": "node examples.js",
    "clean": "rm -rf dist contacts.db",
    "reset-db": "rm -f contacts.db && echo 'Database reset. Restart server to recreate.'",
    "vercel-build": "npm run build"
  },
  "keywords": [
    "contact",
    "identity",
    "reconciliation",
    "bitespeed"
  ],
  "author": "Bitespeed",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.12.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.5",
    "jest": "^29.7.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
